<AuCard @flex={{true}} as |c|>
  <c.header @badgeIcon="user-fill" @badgeSkin="brand">
    <AuHeading @level="2" @skin="4">
      {{this.model.firstName}} {{this.model.familyName}}
    </AuHeading>
  </c.header>
  <c.content>
    <AuHr @size="large" />

    <br />
    {{#each this.model.mandatees as |mandatee|}}
      mandatee: {{mandatee.startDate}} {{mandatee.endDate}} {{mandatee.priority}} <br />
      Beleidsfunctie: {{mandatee.mandate.governmentFunction.label}} <br />
      Beleidsdomeinen:
      {{#each mandatee.governmentFields as |governmentField|}}
        {{governmentField.label}}
      {{/each}}
      <br />
      Legislatuur: {{mandatee.mandate.governmentBody.name}} <br />
      <br />
    {{/each}}
  </c.content>
</AuCard>